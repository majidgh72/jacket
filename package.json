{
  "name": "jacket",
  "version": "1.0.0",
  "description": "Frontend SSR Framework based on React & Express",
  "scripts": {
    "server:build": "webpack --config=webpack.config.server.js",
    "server:watch": "webpack --config=webpack.config.server.js --watch",
    "server:prod": "yarn server:build && node ./build/index.js",
    "server:dev": "concurrently \"yarn server:watch\" \"nodemon ./build/index.js\"",
    "client:build": "webpack --config=webpack.config.client.js",
    "client:watch": "webpack --config=webpack.config.client.js --watch",
    "build": "yarn server:build && yarn client:build",
    "dev": "concurrently \"yarn server:dev\" \"yarn client:watch\""
  },
  "keywords": [],
  "author": "Majid Ghafoorzade",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "hbs": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1",
    "webpack-node-externals": "^3.0.0"
  }
}
