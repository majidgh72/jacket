{
  "name": "jacket",
  "version": "1.0.0",
  "description": "Frontend SSR Framework based on React & Express",
  "scripts": {
    "build": "webpack --config=webpack.config.server.js",
    "watch": "webpack --config=webpack.config.server.js --watch",
    "start:prod": "yarn build && node ./build/index.js",
    "start:dev": "concurrently \"yarn watch\" \"nodemon ./build/index.js\""
  },
  "keywords": [],
  "author": "Majid Ghafoorzade",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "hbs": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1",
    "webpack-node-externals": "^3.0.0"
  }
}
